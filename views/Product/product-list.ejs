<!-- views/Product/product-list.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>

<body>
    <h1>Product List</h1>
    <table border="1">
        <thead>
            <tr>
                <th> ID</th>
                <th>Tên</th>
                <th>Mô Tả</th>
                <th>Hình Ảnh</th>
                <th>Giá</th>
            </tr>
        </thead>
        <tbody>
            <% if (products.length> 0) { %>
                <% products.forEach(product=> { %>
                    <tr>
                        <td>
                            <%= product.masp %>
                        </td> <!-- Assuming 'masp' is the product ID -->
                        <td>
                            <%= product.ten %>
                        </td> <!-- Ensure 'name' matches your column name -->
                        <td>
                            <%= product.mota %>
                        </td> <!-- Ensure 'description' is a valid column -->
                        <td>
                            <%= product.hinhanh %>
                        </td> <!-- Ensure 'description' is a valid column -->
                        <td>
                            <%= product.gia %>
                        </td> <!-- Ensure 'price' is a valid column -->
                    </tr>
                    <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4">No products available</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>
</body>

</html>