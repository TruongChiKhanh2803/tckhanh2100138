<h2>Edit User</h2>
<% if (data.user) { %> <!-- Kiểm tra user và id -->
    <form action="/users/edit/<%= data.user.id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" value="<%= data.user.username %>"
                required>
        </div>
        <div class="mb-3">
            <label for="fullname" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="<%= data.user.fullname %>"
                required>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" name="address" value="<%= data.user.address %>"
                required>
        </div>
        <button type="submit" class="btn btn-primary">Update User</button>
    </form>
    <% } else { %>
        <p>Không tìm thấy thông tin người dùng!</p>
        <% } %>
            <a class="btn btn-secondary" href="/users">Back to List</a>